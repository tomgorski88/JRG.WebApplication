@model JRG.WebApplication.Data.Pracownik

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Pracownik</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Nazwa" class="control-label"></label>
				<input asp-for="Nazwa" class="form-control" />
				<span asp-validation-for="Nazwa" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Notatka" class="control-label"></label>
				<input asp-for="Notatka" class="form-control" />
				<span asp-validation-for="Notatka" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DataUrodzenia" class="control-label"></label>
				<input asp-for="DataUrodzenia" class="form-control" />
				<span asp-validation-for="DataUrodzenia" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DataZatrudnienia" class="control-label"></label>
				<input asp-for="DataZatrudnienia" class="form-control" />
				<span asp-validation-for="DataZatrudnienia" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Telefon" class="control-label"></label>
				<input asp-for="Telefon" class="form-control" />
				<span asp-validation-for="Telefon" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Adres" class="control-label"></label>
				<input asp-for="Adres" class="form-control" />
				<span asp-validation-for="Adres" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Stopien" class="control-label"></label>
				<select asp-for="StopienId" class="form-control" asp-items="ViewBag.StopienId"></select>
				<span asp-validation-for="StopienId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Zmiana" class="control-label"></label>
				<select asp-for="ZmianaId" class="form-control" asp-items="ViewBag.ZmianaId"></select>
				<span asp-validation-for="ZmianaId" class="text-danger"></span>
			</div>

			
				Prawo jazdy
			<div class="editor-field">


					@Html.ListBox("PrawkoId", ViewBag.MultiPrawko as MultiSelectList,  new{
					@class = "chzn-select",
					data_placeholder = "Wybierz prawo jazdy",
						style="width: 100%;"
				})

			</div>


				Ukończone kursy
				<div class="editor-field">
					
					
					@Html.ListBox("KursId", ViewBag.MultiKursy as MultiSelectList,  new{
						@class = "chzn-select",
						data_placeholder = "Wybierz ukończone kursy",
						style="width: 100%;"
					})

				</div>


			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>


			<script src="@Url.Content("~/lib/chosen/chosen.jquery.js")" type="text/javascript"></script>

			<link href="@Url.Content("~/lib/chosen/chosen.css")" rel="stylesheet" type="text/css" />

			<script>$(".chzn-select").chosen();</script> @*Hookup Chosen Plugin*@
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

